   doi = {10.1029/JA079i034p05245},
   isbn = {0148-0227},
   issue = {34},
   journal = {J. Geophys. Res.},
   pages = {5245-5260},
   publisher = {AGU},
   title = {A Theory of Medium-Scale Traveling Ionospheric Disturbances},
   volume = {79},
   url = {http://dx.doi.org/10.1029/JA079i034p05245},
   year = {1974},
}

