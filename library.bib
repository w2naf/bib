@Article{Dubyagin2014,
  author   = {S Dubyagin and N Ganushkina and M Kubyshkina and M Liemohn},
  title    = {Contribution from different current systems to \{SYM\} and \{ASY\} midlatitude indices},
  doi      = {10.1002/2014JA020122},
