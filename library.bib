@Article{Kaepple2015,
  author   = {S R Kaeppler and D L Hampton and M J Nicolls and A Strømme and S C Solomon and J H Hecht and M G Conde},
  title    = {An investigation comparing ground-based techniques that quantify auroral electron flux and conductance},
