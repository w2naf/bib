   journal = {Earth, Planets, and Space},
   month = {12},
   pages = {1287-1294},
   title = {Detecting ionospheric TEC perturbations caused by natural hazards using a global network of GPS receivers: The Tohoku case study},
   volume = {64},
   year = {2012},
}

