@Article{Galva2011,
  author   = {David A Galvan and Attila Komjathy and Michael P Hickey and Anthony J Mannucci},
  title    = {The 2009 Samoa and 2010 Chile tsunamis as observed in the ionosphere using GPS total electron content},
  doi      = {10.1029/2010JA016204},
  issn     = {2156-2202},
  issue    = {A6},
  note     = {A06318},
