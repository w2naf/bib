@Article{Zakharenkova2016,
  author    = {Irina Zakharenkova and Elvira Astafyeva and Iurii Cherniak},
  title     = {GPS and GLONASS observations of large-scale traveling ionospheric disturbances during the 2015 St. Patrick's Day storm},
  doi       = {10.1002/2016JA023332},
