@Article{delarquier2013,
  author   = {S de Larquier and P Ponomarenko and A J Ribeiro and J M Ruohoniemi and J B H Baker and K T Sterne and M Lester},
  title    = {On the spatial distribution of decameter-scale subauroral ionospheric irregularities observed by \{SuperDARN\} radars},
