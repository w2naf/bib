   doi = {10.1029/JA093iA12p14549},
   issn = {2156-2202},
   issue = {A12},
   journal = {Journal of Geophysical Research: Space Physics},
   pages = {14549-14556},
   title = {The cusp and the cleft/boundary layer: Low-altitude identification and statistical local time variation},
   volume = {93},
   url = {http://dx.doi.org/10.1029/JA093iA12p14549},
   year = {1988},
