@Article{Galushko2003,
  author    = {V. G. Galushko and V. S. Beley and A. V. Koloskov and Y. M. Yampolski and V. V. Paznukhov and B. W. Reinisch and J. C. Foster and P. Erickson},
  title     = {Frequency-and-angular HF sounding and ISR diagnostics of TIDs},
