   issue = {A10},
   journal = {Journal of Geophysical Research: Space Physics},
   keywords = {gravity waves; thermosphere; ionosphere; 2487 Wave},
   title = {Generation of large-scale gravity waves and neutral winds in the thermosphere from the dissipation of convectively generated gravity waves},
