@InProceedings{Kaeppler2021-HamSCI,
  author    = {Stephen R Kaeppler and Scott Driggers and Andrew Wetzel and Alexander Murtha and Tedi Godfrey},
  title     = {Toward interpretation of HF propagation data obtained by the HamSCI Community - Ray Tracers and Ionospheric Models},
  publisher = {HamSCI},
  url       = {https://hamsci.org/publications/toward-interpretation-hf-propagation-data-obtained-hamsci-community-ray-tracers-and},
