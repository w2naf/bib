@Article{Belian1981,
  author   = {R D Belian and D N Baker and E W Hones and P R Higbie and S J Bame and J R Asbridge},
  title    = {Timing of energetic proton enhancements relative to magnetospheric substorm activity and its implication for substorm theories},
  doi      = {10.1029/JA086iA03p01415},
