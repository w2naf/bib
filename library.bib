@Article{Limpasuvan2005,
  author   = {Varavut Limpasuvan and Dennis L Hartmann and David W J Thompson and Kumar Jeev and Yuk L Yung},
  title    = {Stratosphere-troposphere evolution during polar vortex intensification},
  doi      = {10.1029/2005JD006302},
