@Article{Brown2004,
  author   = {L B Brown and A J Gerrard and J W Meriwether and J J Makela},
  title    = {All-sky imaging observations of mesospheric fronts in \{OI\} 557.7 nm and broadband \{OH\} airglow emissions: \{Analysis\} of frontal structure, atmospheric background conditions, and potential sourcing mechanisms},
