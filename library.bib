@Article{Clausen2012,
  author   = {L B N Clausen and J B H Baker and J M Ruohoniemi and R A Greenwald and E G Thomas and S G Shepherd and E R Talaat and W A Bristow and Y Zheng and A J Coster and S Sazykin},
  title    = {Large-scale observations of a subauroral polarization stream by midlatitude SuperDARN radars: Instantaneous longitudinal velocity variations},
